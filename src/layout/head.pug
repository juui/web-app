head

  meta(charset="utf-8")
  meta(http-equiv="X-UA-Compatible", content="IE=edge, chrome=1")

  meta(name="viewport", content="width=device-width, initial-scale=1")
  base(href="/")

  style.
    .ng-hide {
      display: none !important;
    }

    [ng\:cloak], [ng-cloak], [data-ng-cloak], [x-ng-cloak], .ng-cloak, .x-ng-cloak {
      display: none !important;
    }

    .main-logo {
      max-height: 300px;
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
    }

  include head/alternates
  include head/global-matadata
  include head/facebook-metadata
  include head/favicon

  link(href='https://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')

  script(src='https://cdn.mathjax.org/mathjax/latest/MathJax.js?config=TeX-AMS_CHTML')
  script(type='text/x-mathjax-config').
    MathJax.Hub.Config({ skipStartupTypeset: true, elements: ['math'], tex2jax: {inlineMath: [['$','$'], ['\\(','\\)']]} });

